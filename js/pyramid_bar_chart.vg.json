{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {"text": "Population Pyramid (2004-2024)", "fontSize": 24},
    "width": 800,
    "height": 900,
    "data": {
      "url": "https://raw.githubusercontent.com/cchu0088/3179_Visualization-2/main/data/processed_cancer_death_rate_by_age_group.csv",
      "format": {"type": "csv"}
    },
    "params": [
      {
        "name": "Year_selection",
        "value": 2020,
        "bind": {
          "input": "range",
          "min": 2000,
          "max": 2021,
          "step": 1,
          "name": "Year: "
        }
      }
    ],
    "hconcat": [
      {
        "layer": [
          {
            "width": 150,
            "transform": [
              {
                "filter": "datum.sex == 'female' && datum.age != 'overall' && datum.ethnicity== 'overall' && year(datum.date) == Year_selection && datum.state == State_selection"
              },
              {
                "filter"
              }
            ],
            "mark": "bar",
            "encoding": {
              "y": {
                "field": "age",
                "type": "ordinal",
                "sort": [
                  "0-4",
                  "5-9",
                  "10-14",
                  "15-19",
                  "20-24",
                  "25-29",
                  "30-34",
                  "35-39",
                  "40-44",
                  "45-49",
                  "50-54",
                  "55-59",
                  "60-64",
                  "65-69",
                  "70+"
                ],
                "axis": null
              },
              "x": {
                "field": "population",
                "type": "quantitative",
                "title": "Female Population('000)",
                "axis": {"format": "s"},
                "scale": {"zero": true},
                "sort": "descending"
              },
              "color": {"value": "#FF69B4"}
            }
          },
          {
            "transform": [
              {
                "filter": "datum.sex == 'female' && datum.age != 'overall' && datum.ethnicity== 'overall' && year(datum.date) == Year_selection && datum.state == State_selection"
              }
            ],
            "mark": {"type": "text", "align": "right", "dx": -5},
            "encoding": {
              "y": {
                "field": "age",
                "type": "ordinal",
                "sort": [
                  "0-4",
                  "5-9",
                  "10-14",
                  "15-19",
                  "20-24",
                  "25-29",
                  "30-34",
                  "35-39",
                  "40-44",
                  "45-49",
                  "50-54",
                  "55-59",
                  "60-64",
                  "65-69",
                  "70+"
                ]
              },
              "x": {"field": "population", "type": "quantitative"},
              "text": {
                "field": "population",
                "type": "quantitative",
                "format": ","
              }
            }
          }
        ]
      },
      {
        "width": 40,
        "view": {"stroke": null},
        "mark": {"type": "text", "align": "center"},
        "transform": [
          {
            "filter": "datum.sex == 'female' && datum.age != 'overall' && datum.ethnicity== 'overall' && year(datum.date) == Year_selection && datum.state == State_selection"
          }
        ],
        "encoding": {
          "y": {
            "field": "age",
            "type": "ordinal",
            "sort": [
              "0-4",
              "5-9",
              "10-14",
              "15-19",
              "20-24",
              "25-29",
              "30-34",
              "35-39",
              "40-44",
              "45-49",
              "50-54",
              "55-59",
              "60-64",
              "65-69",
              "70+"
            ]
          },
          "text": {"field": "age"}
        }
      },
      {
        "layer": [
          {
            "width": 150,
            "transform": [
              {
                "filter": "datum.sex == 'male' && datum.age != 'overall' && datum.ethnicity== 'overall' && year(datum.date) == Year_selection && datum.state == State_selection"
              }
            ],
            "mark": "bar",
            "encoding": {
              "y": {
                "field": "age",
                "type": "ordinal",
                "sort": [
                  "0-4",
                  "5-9",
                  "10-14",
                  "15-19",
                  "20-24",
                  "25-29",
                  "30-34",
                  "35-39",
                  "40-44",
                  "45-49",
                  "50-54",
                  "55-59",
                  "60-64",
                  "65-69",
                  "70+"
                ],
                "axis": null
              },
              "x": {
                "field": "population",
                "type": "quantitative",
                "title": "Male Population('000)",
                "axis": {"format": "s"},
                "scale": {"zero": true}
              },
              "color": {"value": "#1E90FF"}
            }
          },
          {
            "transform": [
              {
                "filter": "datum.sex == 'male' && datum.age != 'overall' && datum.ethnicity== 'overall' && year(datum.date) == Year_selection && datum.state == State_selection"
              }
            ],
            "mark": {"type": "text", "align": "left", "dx": 5},
            "encoding": {
              "y": {
                "field": "age",
                "type": "ordinal",
                "sort": [
                  "0-4",
                  "5-9",
                  "10-14",
                  "15-19",
                  "20-24",
                  "25-29",
                  "30-34",
                  "35-39",
                  "40-44",
                  "45-49",
                  "50-54",
                  "55-59",
                  "60-64",
                  "65-69",
                  "70+"
                ]
              },
              "x": {"field": "population", "type": "quantitative"},
              "text": {
                "field": "population",
                "type": "quantitative",
                "format": ","
              }
            }
          }
        ]
      }
    ],
    "config": {"view": {"stroke": null}, "axis": {"grid": false}}
  }