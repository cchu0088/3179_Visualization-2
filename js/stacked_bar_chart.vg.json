{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "https://raw.githubusercontent.com/cchu0088/3179_Visualization-2/main/data/cancer_type_malaysia.csv"
    },
    "width": "container",
    "height": 500,
    "mark": {
    "type": "bar",
    "width": 25  
    },
    "encoding": {
      "y": {
        "aggregate": "sum",
        "field": "Age-standardized deaths in both sexes per 100,000 people",
        "type": "quantitative",
        "axis": {
          "title": "Age-standardized deaths in both sexes per 100,000 people",
          "labelFont": "Verdana",
          "labelFontSize": 11,
          "titleFont": "Verdana",
          "titleFontSize": 12
        }
        
      },
      "x": {
        "field": "Year",
        "type": "ordinal",
        "axis": {
          "title": "Year", 
          "labelAngle": 0, 
          "labelOverlap": true,
          "labelFont": "Verdana",
          "labelFontSize": 11,
          "titleFont": "Verdana",
          "titleFontSize": 12}
      },
      "color": {
        "field": "Cancer Type",
        "type": "nominal",
        "sort": {
          "field": "Age-standardized deaths in both sexes per 100,000 people",
          "op": "sum",
          "order": "ascending"
        },
        "scale": {
          "domain": [
            "testicular cancer",
            "larynx cancer",
            "corpus uteri cancer",
            "kidney cancer",
            "melanoma and other",
            "thyroid cancer",
            "gallbladder and biliary tract cancer",
            "cervix uteri cancer",
            "bladder cancer",
            "brain and nervous system cancers",
            "oesophagus cancer",
            "ovary cancer",
            "pancreas cancer",
            "prostate cancer",
            "stomach cancer",
            "mouth and oropharynx cancers",
            "liver cancer",
            "breast cancer",
            "colon and rectum cancers",
            "trachea, bronchus, lung cancers"
          ],
          "range": [
            "#1f78b4 ",  
            "#FF7F50",  
            "#8DA0CB",  
            "#E78AC3",  
            "#FFD92F",  
            "#E5C494",  
            "#B3B3B3",  
            "#FF69B4",  
            "#4DBBD5",  
            "#6F9C55",  
            "#D95F02",  
            "#7570B3",  
            "#5dade2",  
            "#D9D9D9",  
            "#6a3d9a",  
            "#33a02c",  
            "#f7f421",  
            "#808e90"   
        ]
        },
        "legend": {
          "orient": "right", 
          "title": "Cancer Type",
          "labelFont": "Verdana",
          "labelFontSize": 11,
          "titleFont": "Verdana",
          "titleFontSize": 12,
          "rowPadding": 10,
          "labelLimit": 300
            }
      },
      "order": {
        "field": "Age-standardized deaths in both sexes per 100,000 people",
        "aggregate": "sum",
        "sort": "descending"
      },
      "tooltip": [
        {"field": "Year", "type": "ordinal", "title": "Year"},
        {"field": "Cancer Type", "type": "nominal", "title": "Cancer Type"},
        {"field": "Age-standardized deaths in both sexes per 100,000 people", "type": "quantitative", "title": "Deaths per 100,000"}
      ]
    }
  }