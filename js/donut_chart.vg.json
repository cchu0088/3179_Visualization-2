
{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "data": {
    "url": "https://raw.githubusercontent.com/cchu0088/3179_Visualization-2/main/data/continent_death_cancer.csv"
  },
  "transform": [
    {
      "calculate": "datum['Total deaths from malignant neoplasms among both sexes']/datum.Population * 10000",
      "as": "Cases per 10,000 Population"
    },
    { "filter": "datum.Year == Year_selection" },
    {
      "window": [
          {
              "op": "sum",
              "field": "Cases per 10,000 Population",
              "as": "Total Cases per 10,000 Population for Year"
          }
      ],
      "frame": [
          null,
          null
      ]
  },
  {
      "calculate": "(datum['Cases per 10,000 Population'] / datum['Total Cases per 10,000 Population for Year']) * 100",
      "as": "Percentage"
  }
  ],
  "params": [
    {
      "name": "Year_selection",
      "value": 2021, 
      "bind": {
        "input": "range",
        "min": 2000,
        "max": 2021,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "encoding": {
    "theta": {"field": "Cases per 10,000 Population", "type": "quantitative", "stack": true},
    "color": {
          "field": "Continent",
          "type": "nominal",
          "scale": {
            "domain": [
              "North America",
              "South America",
              "Europe",
              "Africa",
              "Asia",
              "Oceania"
            ],
            "range": [
              "#ff7f00",
              "#984ea3",
              "#e41a1c",
              "#6cd4c5",
              "#377eb8",
              "#a65628"
            ]
          },
          "legend" : null
        },
    "opacity": { "value": 1 },
    "tooltip": [
      { "field": "Continent", "type": "nominal", "title": "Continent" },
      { 
        "field": "Cases per 10,000 Population", 
        "type": "quantitative", 
        "title": "Cancer Deaths per 10,000 Population", 
        "format": ".2f" 
      },
      { 
        "field": "Total deaths from malignant neoplasms among both sexes", 
        "type": "quantitative", 
        "title": "Total Cancer Deaths", 
        "format": "," 
      },
      { 
        "field": "Population", 
        "type": "quantitative", 
        "title": "Population", 
        "format": ","
      },
      {
        "field": "Percentage",
        "type": "quantitative",
        "format": ".2f",
        "title": "Percentage (%)"
      }
    ]
  },
  "layer": [{
    "mark": {"type": "arc", "innerRadius": 100, "outerRadius": 160}
  }, {
    "mark": {"type": "text", "radius": 190},
    "encoding": {
      "text": {"field": "Continent", "type": "nominal"}
    }
  }]
}
