{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 400,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/cchu0088/3179_Visualization-2/main/data/cancer_type_malaysia.csv"
  },
  "title": "Cancer Deaths by Cancer Type in Malaysia (2000 - 2021)",
  "config": {
    "view": {
      "strokeWidth": 0,
      "step": 20
    },
    "axis": {
      "domain": false
    }
  },
  "mark": {
    "type": "rect",
    "stroke": "white",  
    "strokeWidth": 0.3  
  },
  "encoding": {
    "x": {
      "field": "Year",
      "type": "ordinal",
      "title": "Year",
      "axis": {
        "labelAngle": 0
      }
    },
    "y": {
      "field": "Cancer Type",
      "type": "nominal",
      "title": "Cancer Type"
    },
    "color": {
      "field": "Age-standardized deaths in both sexes per 100,000 people",
      "type": "quantitative",
      "scale": {
        "domain": [0, 8],  
        "scheme": "redpurple" 
      },
      "legend": {
        "title": "Deaths per 100,000"
      }
    },
    "tooltip": [
      { "field": "Year", "type": "ordinal", "title": "Year" },
      { "field": "Cancer Type", "type": "nominal", "title": "Cancer Type" },
      { "field": "Age-standardized deaths in both sexes per 100,000 people", "type": "quantitative", "title": "Deaths per 100,000" }
    ]
  }
}