{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Global Cancer Deaths (2000â€“2021)",
    "width": 800,
    "height": 400,
    "projection": {"type": "equalEarth"},
    "data": {
      "url": "https://raw.githubusercontent.com/cchu0088/3179_Homework_Assessment_10/main/js/ne_110m.json",
      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    "params": [
    {
      "name": "year_selection",
      "bind": {
        "input": "select",
        "options": [
          2000, 2001, 2002,
          2003, 2004, 2005, 2006, 2007, 2008, 2009, 2010, 2011,
          2012, 2013, 2014, 2015, 2016, 2017, 2018, 2019, 2020,
          2021
        ],
        "name": "Year Selection: ",
        "labels": [
          "2000", "2001", "2002",
          "2003", "2004", "2005", "2006", "2007", "2008", "2009", "2010", "2011",
          "2012", "2013", "2014", "2015", "2016", "2017", "2018", "2019", "2020",
          "2021"
        ]
      },
      "value": 2021
    }
  ],
  "layer": [
    {
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {"tooltip": {"field": "note"}}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/cchu0088/3179_Homework_Assessment_10/main/js/oceans.json",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "skyblue"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/cchu0088/3179_Homework_Assessment_10/main/js/world_map_with_graticules.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    },
    {
      "transform": [
        {
          "calculate": "datum.properties.NAME + '_' + year_selection",
          "as": "Entity_Year"
        },
        { 
          "lookup": "Entity_Year",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/cchu0088/3179_Homework_Assessment_10/main/data/rounded_deaths_fixed_with_entity_year.csv"
            },
            "key": "Entity_Year",
            "fields": ["Total deaths from malignant neoplasms among both sexes", "Population"]
            }
        },
        {"calculate": "datum['Total deaths from malignant neoplasms among both sexes']/ datum['Population'] * 10000", "as": "Deaths from cancer per 10,000 population"}
      ],
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "Deaths from cancer per 10,000 population",
          "type": "quantitative",
          "scale": {"type": "threshold",
            "domain": [5, 10, 20, 30],
            "range": ["#fdbb84","#fc8d59","#ef6548","#d7301f","#990000"]} 
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "Total deaths from malignant neoplasms among both sexes", "type": "quantitative"},
          {
            "field": "Deaths from cancer per 10,000 population",
            "type": "quantitative",
            "format": ".2f"
          }
        ]
      }
    }
  ]
}





