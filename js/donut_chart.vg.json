{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Total Cancer Deaths per 10,000 Population in 2021 by Country",
    "data": {
      "url": "https://raw.githubusercontent.com/cchu0088/3179_Visualization-2/main/data/continent_death_cancer.csv"
    },
    "transform": [
      {
        "filter": "datum.Year == 2021" 
      },
      {
        "calculate": "datum['Total deaths from malignant neoplasms among both sexes']/datum.Population * 10000",
        "as": "Deaths per 10,000 Population"
      },
      {
        "filter": "datum['Deaths per 10,000 Population'] > 0 && datum.Population > 0"  
      }
    ],
    "mark": {
      "type": "arc",
      "innerRadius": 100,  
      "outerRadius": 200
    },
    "encoding": {
      "theta": {
        "field": "Deaths per 10,000 Population",
        "type": "quantitative",
        "title": "Total Cancer Deaths per 10,000 Population"
      },
      "color": {
        "field": "Continent",
        "type": "nominal",
        "title": "Continent",
        "legend": {
          "title": "Continent",
          "orient": "right"
        }
      },
      "tooltip": [
        { "field": "Continent", "type": "nominal", "title": "Continent" },
        { 
          "field": "Deaths per 10,000 Population", 
          "type": "quantitative", 
          "title": "Cancer Deaths per 10,000 Population", 
          "format": ".2f" 
        },
        { 
          "field": "Total deaths from malignant neoplasms among both sexes", 
          "type": "quantitative", 
          "title": "Total Cancer Deaths", 
          "format": "," 
        },
        { 
          "field": "Population", 
          "type": "quantitative", 
          "title": "Population", 
          "format": ","
        }
      ]
    }
  }