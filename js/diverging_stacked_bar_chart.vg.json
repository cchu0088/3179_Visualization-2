



  {
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A diverging stacked bar chart for age-standardized deaths from malignant neoplasms in males and females per 100,000 people for the year 2021.",
    "data": {
      "url": "https://raw.githubusercontent.com/cchu0088/3179_Visualization-2/main/data/death-rate-from-cancer-by-sex-reshaped.csv"
    },
    "transform": [
      {"filter": "datum.year == 2021"},
      {"calculate": "datum.Sex == 2 ? 'Female' : 'Male'", "as": "gender"},
      {"calculate": "datum.Sex == 2 ? -datum['Age-standardized deaths from malignant neoplasms 100,000 people'] : datum['Age-standardized deaths from malignant neoplasms 100,000 people']", "as": "signed_people"}
    ],
    "width": 300,
    "height": 200,
    "mark": "bar",
    "encoding": {
      "y": {
        "field": "Entity",
        "axis": null, "sort": "descending"
      },
      "x": {
        "aggregate": "sum", "field": "signed_people",
        "title": "population",
        "axis": {"format": "s"}
      },
      "color": {
        "field": "gender",
        "scale": {"range": ["#675193", "#ca8861"]},
        "legend": {"orient": "top", "title": null}
      }
    },
    "config": {
      "view": {"stroke": null},
      "axis": {"grid": false}
    }
  }
  